<div class="w-full">
  <%= render "common/message", message: notice, color: :green %>
  <%= render "common/message", message: alert, color: :red %>

  <% content_for :title, "Wallets" %>

  <div class="w-full xl:w-9/12 mx-auto flex">
    <section class="container mx-auto px-4">
      <%= render "common/navigation", current_page: "root" %>

      <div class="mt-6 sm:flex sm:items-center sm:justify-between">
        <div>
          <div class="flex items-center gap-x-3">
            <%= image_tag asset_path("money.png"), size: "32x32" %>
            <h1 class="text-2xl text-gray-800 font-medium"><%= link_to t("app.title"), root_path %></h1>
            <span class="px-3 py-1 text-xs text-blue-600 bg-blue-100 rounded-full max-sm:hidden"><%= Account.num_records %></span>
          </div>
          <p class="mt-1 pl-0.5 text-sm text-gray-500"><%= format_pending_transactions_sum(Transaction.pending) %></p>
        </div>

        <div class="mt-4 flex items-center gap-x-3">
          <button class="-mb-0.5 px-5 py-2 text-sm text-white active:text-gray-100 bg-blue-600 hover:bg-blue-700 active:bg-blue-800 border border-blue-600 hover:border-blue-700 active:border-blue-800 transition-colors duration-200 rounded-lg block">
            <span><%= t("home.new_transaction") %></span>
          </button>
        </div>
      </div>

      <div class="mt-4 md:flex md:items-center md:justify-between">
        <%= form_with url: root_path, method: :get, class: "md:w-full", data: { controller: "filter", turbo_frame: "transactions", turbo_action: "advance", filter_app_title: t("app.title"), filter_page_title: t("app.filter_title") } do |form| %>
          <div class="inline-flex overflow-hidden bg-white border divide-x rounded-lg">
            <button class="button-filter-sorted px-5 py-2 text-xs sm:text-sm font-medium transition-colors duration-200 <%= filter_nav_classes("sorted", @filter, @search) %>" data-action="click->filter#change" data-filter="sorted"><%= t("home.tabs.sorted") %></button>
            <button class="button-filter-dinero px-5 py-2 text-xs sm:text-sm font-medium transition-colors duration-200 <%= filter_nav_classes("dinero", @filter, @search) %>" data-action="click->filter#change" data-filter="dinero"><%= t("home.tabs.dinero") %></button>
            <button class="button-filter-credit px-5 py-2 text-xs sm:text-sm font-medium transition-colors duration-200 <%= filter_nav_classes("credit", @filter, @search) %>" data-action="click->filter#change" data-filter="credit"><%= t("home.tabs.credit") %></button>
          </div>
          <%= form.hidden_field :filter, value: @filter %>
        <% end %>

        <div class="mt-3 md:mt-0 relative flex items-center">
          <span class="absolute"><span class="w-5 h-5 mx-3 text-gray-400 opacity-50">üîç</span></span>
          <%= form_with url: root_path, method: :get, class: "w-full", data: { controller: "filter search", action: "search:reset->filter#deselect", turbo_frame: "transactions", turbo_action: "advance", search_app_title: t("app.title"), search_page_title: t("app.search_title") } do |form| %>
            <input type="text" name="search" value="<%= params[:search] %>" placeholder="<%= t("home.search") %>" data-action="search#search" class="w-full lg:w-80 pl-11 pr-5 py-1.5 placeholder-gray-400/70 text-gray-700 bg-white border border-gray-200 focus:border-blue-400 focus:ring focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none rounded-lg block" />
          <% end %>
        </div>
      </div>

      <%= render "transactions/transactions", transactions: @transactions %>
    </section>
  </div>
</div>
